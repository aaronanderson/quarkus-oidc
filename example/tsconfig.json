{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "allowJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es2015", "es2017", "dom"],
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "preserveConstEnums": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true
  },
  //"exclude": ["node_modules", "modules/**/dist/*", "modules/**/ts-tmp/*", "docs"]
  "include": ["src/main/web/*","src/main/web/components/*","src/main/web/pages/*"],

   "exclude": [ "node_modules",  "build"  ]
}
